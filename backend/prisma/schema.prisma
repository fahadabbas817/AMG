generator client {
  provider     = "prisma-client"
  output       = "../prisma/generated"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String // Hashed
  createdAt DateTime @default(now())
}

model Vendor {
  id                String  @id @default(uuid())
  vendorNumber      String  @unique // e.g., "001"
  companyName       String
  contactName       String
  email             String  @unique
  password          String // Hashed
  phone             String?
  address           String? // "5001 SW 74th Ct..."
  contractSignatory String? // "Tushna Pirrongelli"

  // Critical for matching CSV rows to this vendor
  subLabels String[] // e.g. ["PornMegaLoad", "Score", "PornMegaWorld"]

  // Banking Info
  bankDetails BankDetails? // { bankName, accountNo, routing, iban, swift, currency, method }
  qbVendorId  String? // QuickBooks Link

  platformSplits PlatformSplit[]
  revenueRecords RevenueRecord[]
  payouts        Payout[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Platform {
  id            String  @id @default(uuid())
  name          String  @unique // The "Display Name" (e.g. "AEBN")
  corporateName String? // The legal/internal name (e.g. "Data Tech")
  defaultSplit  Float // Default AMG Commission (e.g., 0.25 for 25%)

  splits          PlatformSplit[]
  revenueRecords  RevenueRecord[]
  revenueReports  RevenueReport[]
  mappingTemplate PlatformMappingTemplate? // Relation to the mapping template
}

model PlatformMappingTemplate {
  id         String   @id @default(uuid())
  platformId String   @unique
  platform   Platform @relation(fields: [platformId], references: [id])

  // JSON object storing which CSV column maps to which System field
  // e.g. { "Studio": "lineItemName", "Total": "grossRevenue" }
  mappingRules Json

  headerRowIndex Int // The row number where data starts (0-indexed)

  updatedAt DateTime @updatedAt
}

// Custom split per Vendor per Platform
model PlatformSplit {
  id         String   @id @default(uuid())
  vendorId   String
  vendor     Vendor   @relation(fields: [vendorId], references: [id])
  platformId String
  platform   Platform @relation(fields: [platformId], references: [id])

  commissionRate Float // Overrides Platform.defaultSplit if set

  @@unique([vendorId, platformId])
}

model BankDetails {
  id       String @id @default(uuid())
  vendorId String @unique // @unique ensures One-to-One relation
  vendor   Vendor @relation(fields: [vendorId], references: [id])

  // Fields strictly from your CSV (Rows 13-21)
  bankName      String? // "Bank Name XYZ"
  bankAddress   String? // "Bank Address"
  accountNumber String? // "Acct Number"
  ibanRouting   String? // "IBAN / Routing"
  swiftCode     String? // "SWIFT Code"
  currency      String? // "Currency" (e.g. USD, EUR)

  // Logic for Payout Method (Paypal vs ACH)
  payoutMethod PayoutMethod @default(ACH) // Enum

  paypalEmail String? // Only used if payoutMethod is PAYPAL
  accountType String? // "Checking" or "Savings" (For ACH)
}

model RevenueReport {
  id         String    @id @default(uuid())
  filename   String
  uploadDate DateTime  @default(now())
  status     String // "PENDING", "PROCESSED", "ERROR"
  rawFileUrl String
  platformId String?
  platform   Platform? @relation(fields: [platformId], references: [id])

  // New: Metadata about the "Big Check" from the Admin UI
  totalAmount   Decimal?              @db.Decimal(10, 2) // "Paid to AMG" amount
  invoiceRef    String? // Invoice # provided by Admin
  paymentStatus RevenuePaymentStatus? @default(PENDING)
  month         DateTime? // The reporting month (e.g., 2025-06-01)

  records RevenueRecord[]
}

model RevenueRecord {
  id       String         @id @default(uuid())
  reportId String?
  report   RevenueReport? @relation(fields: [reportId], references: [id])

  // NEW: Tracking the raw name from the file vs. the matched ID
  vendorId      String? // Null if UNMATCHED
  vendor        Vendor? @relation(fields: [vendorId], references: [id])
  rawVendorName String // e.g., "Porn_Mega_Load" or "Simply Anal"

  platformId String
  platform   Platform @relation(fields: [platformId], references: [id])

  periodStart DateTime
  periodEnd   DateTime

  // Financials
  grossRevenue  Decimal @db.Decimal(10, 2)
  amgCommission Decimal @default(0) // Calculated in M4
  vendorNet     Decimal @default(0) // Calculated in M4

  // NEW: Details for the "Drill-down" view
  lineItemName String? // Video Title (e.g., "Big Tits Scene 1")

  // THE FLEXIBLE FIELDS
  metadata    Json? // Stores extra cols: { "PPM": 2.3, "Rental": 1.2 }
  rawLineData Json? // Full original row for audit logs

  // Matching Status
  status String @default("UNPROCESSED") // "MATCHED", "UNMATCHED", "MANUAL"

  payoutId String?
  payout   Payout? @relation(fields: [payoutId], references: [id])

  createdAt DateTime @default(now())
}

model Payout {
  id           String @id @default(uuid())
  payoutNumber Int    @default(autoincrement()) // e.g. 102
  vendorId     String
  vendor       Vendor @relation(fields: [vendorId], references: [id])

  items RevenueRecord[] // The records being paid

  totalAmount  Decimal // Sum of vendorNet of all items
  status       String // PENDING, PAID
  paymentDate  DateTime?
  referenceRef String? // Check # or Transaction ID
  qbBillId     String? // QuickBooks Bill ID

  createdAt DateTime @default(now())
}

enum RevenuePaymentStatus {
  PAID
  PENDING
}

enum Role {
  ADMIN
  VENDOR
}

enum PayoutMethod {
  ACH
  PAYPAL
  WIRE
}
